@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

@font-face {
	font-family: 'Geist';
	src: url('/fonts/Geist.ttf');
}

:root [data-theme='maniac'] {
	--theme-font-family-heading: 'Geist', sans-serif;
}

html {
	@apply scroll-smooth prose-headings:font-bold;
}

body {
	@apply hide-scrollbar;
}

.gradient-text {
	@apply bg-gradient-to-br from-primary-400 to-tertiary-500 bg-clip-text text-transparent;
}

.bento-box {
	@apply card flex flex-col gap-4 p-12;
}
